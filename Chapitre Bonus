    if noob >= 1:
        $ mental += 10
        $ vie += 10
        $ endurance += 10
        $ gold += 10
        "Les gens autour de vous et vous regarde d'un air béa"
        "Mais sans pluss en faisant le saltinbanque vous gagnez +10pakupaku"
    if facile >= 10:
        $ mental += 5
        $ vie += 5
        "Une salve d'applaudissement par les gens autour de vous"
    if normal >= 12:
